<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginScreenTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="dialogFragmentThemeLoading" parent="dialogFragmentThemeLoading.Parent" />

    <style name="dialogFragmentThemeLoading.Parent" parent="Base.Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowEnterAnimation">@anim/slide_in_loading</item>
        <item name="android:windowExitAnimation">@anim/slide_out_loading</item>
    </style>

    app:popupTheme="@style/AppTheme.PopupOverlay"

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light"/>
</resources>
